<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc" >

    <LinearLayout
        android:id="@+id/id_activity_footer_lay_log"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:descendantFocusability="beforeDescendants"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/id_activity_footer_btn_log"
            android:background="#0000"
            android:clickable="false"
            android:src="@drawable/ico_footer_btn_res_log_idle"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_x_log_footer_title"
            android:textColor="#111"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_activity_footer_lay_hero"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:descendantFocusability="beforeDescendants"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/id_activity_footer_btn_hero"
            android:background="#0000"
            android:clickable="false"
            android:src="@drawable/ico_footer_btn_hero_normal"
            android:contentDescription=""
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_x_man_footer_title"
            android:textColor="#111"/>
    </LinearLayout>

</LinearLayout>